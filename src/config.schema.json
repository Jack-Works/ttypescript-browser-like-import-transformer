{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$ref": "#/definitions/PluginConfig",
    "definitions": {
        "PluginConfig": {
            "description": "",
            "title": "PluginConfig",
            "type": "object",
            "properties": {
                "appendExtensionName": {
                    "description": "Add '.js' extension for local module specifier",
                    "default": ".js",
                    "type": ["string", "boolean"],
                    "title": "appendExtensionName"
                },
                "appendExtensionNameForRemote": {
                    "description": "Also append extension to http:// or https://",
                    "default": false,
                    "type": "boolean",
                    "title": "appendExtensionNameForRemote"
                },
                "bareModuleRewrite": {
                    "description": "`false`: disable the transform\r`BareModuleRewriteSimple.snowpack`: if you are using snowpack (https://github.com/pikapkg/snowpack)\r`BareModuleRewriteSimple.umd`: make your `import a from 'b'` to `const a = globalThis.b`\r`BareModuleRewriteSimple.unpkg`: try to transform imports path to https://unpkg.com/package",
                    "default": "umd",
                    "anyOf": [
                        {
                            "type": "object",
                            "additionalProperties": {
                                "anyOf": [
                                    {
                                        "$ref": "#/definitions/BareModuleRewriteUMD"
                                    },
                                    {
                                        "enum": [false, "pikacdn", "snowpack", "umd", "unpkg"]
                                    }
                                ]
                            }
                        },
                        {
                            "enum": [false, "pikacdn", "snowpack", "umd", "unpkg"]
                        }
                    ],
                    "title": "bareModuleRewrite"
                },
                "dynamicImportPathRewrite": {
                    "description": "`false`: Do not rewrite\r`'auto'`: try to optimise automatically\r`DynamicImportPathRewrite`: using a custom function to handle the import path (path: string, builtinImpl: (path) => Promise<any>): Promise<any>",
                    "default": "auto",
                    "anyOf": [
                        {
                            "$ref": "#/definitions/DynamicImportPathRewriteCustom"
                        },
                        {
                            "enum": ["auto", false]
                        }
                    ],
                    "title": "dynamicImportPathRewrite"
                },
                "globalObject": {
                    "description": "Used in UMD.\nFor what object will store the UMD variables",
                    "default": "globalThis",
                    "type": "string",
                    "title": "globalObject"
                },
                "webModulePath": {
                    "description": "Used in snowpack. web_modules module path",
                    "default": "/web_modules/",
                    "type": "string",
                    "title": "webModulePath"
                },
                "importHelpers": {
                    "description": "Specify where is the helper is.",
                    "default": "auto",
                    "anyOf": [
                        {
                            "type": "string"
                        },
                        {
                            "enum": ["auto", "inline"]
                        }
                    ],
                    "title": "webModulePath"
                }
            }
        },
        "BareModuleRewriteObject": {
            "anyOf": [
                {
                    "$ref": "#/definitions/BareModuleRewriteUMD"
                },
                {
                    "enum": [false, "pikacdn", "snowpack", "umd", "unpkg"]
                }
            ]
        },
        "DynamicImportPathRewriteCustom": {
            "title": "DynamicImportPathRewriteCustom",
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["custom"],
                    "title": "type"
                },
                "function": {
                    "description": "e.g: \"(path => path + '.js')\"",
                    "type": "string",
                    "title": "function"
                }
            },
            "required": ["function", "type"]
        },
        "BareModuleRewriteSimple": {
            "enum": ["pikacdn", "snowpack", "umd", "unpkg"],
            "type": "string"
        },
        "BareModuleRewriteUMD": {
            "title": "BareModuleRewriteUMD",
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["umd"],
                    "title": "type"
                },
                "target": {
                    "type": "string",
                    "title": "target"
                },
                "globalObject": {
                    "type": "string",
                    "title": "globalObject"
                }
            },
            "required": ["target", "type"]
        }
    }
}
